<div id="map" style="width: 100%; height: 400px;"></div>
<div class="container">

  <div class="row">

    <% @parking_spots.each do |parking_spot|%>
    <div class="col-xs-12 col-sm-6">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path parking_spot.photo, height: 300, width: 550, crop: :fill %>');">
        <div class="card-category"><%= parking_spot.title %></div>
        <div class="card-description">
          <h2><%= parking_spot.size %></h2>
          <h2>Price: â‚¬<%= parking_spot.price_per_day %>0</h2>
        </div>
        <%= cl_image_tag parking_spot.user.photo, :class => "card-user avatar-square" %>
        <%= link_to "", parking_spot_path(parking_spot), class: "card-link" %>
      </div>




  </div>
  <% end %>
</div>




<% content_for(:after_js) do %>
<%= javascript_tag do %>
$(document).ready(function() {
var handler = Gmaps.build('Google');
handler.buildMap({ internal: { id: 'map' } }, function() {
markers = handler.addMarkers(<%= raw @hash.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
if (markers.length == 0) {
handler.getMap().setZoom(2);
} else if (markers.length == 1) {
handler.getMap().setZoom(14);
}
});
});
<% end %>
<% end %>



