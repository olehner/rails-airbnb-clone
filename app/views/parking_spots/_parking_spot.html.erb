<div class="text-center padded">

  <h1> <%= @parking_spot.title  %></h1>
  <!-- ParkingSpot#show -->
  <!-- <p>Find me in app/views/parking_spot/show.html.erb</p> -->

  <%= cl_image_tag @parking_spot.photo, height: 300, width: 400, crop: :fill %>
  <h4>Size - <%= @parking_spot.size %> </h4>
  <h4> Address - <%= @parking_spot.address.full_address %></h4>
  <h4>Price per day - â‚¬ <%= @parking_spot.price_per_day %></h4>
  <h4><%= @parking_spot.description %></h4>


    <div id="map" style="width: 60%; height: 400px;"></div>

  <h4>Parklord details</h4>
  <%= @parking_spot.parklord.first_name %> <%= @parking_spot.parklord.last_name %>
  <%= @parking_spot.parklord.bio %>


  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).ready(function() {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
          }
        });
      });
    <% end %>
  <% end %>
</div>
