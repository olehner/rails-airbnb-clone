<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "parklogo.png" %>
  <% end %>
  <h3>Sir Parks a Lot</h3>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <%= render 'shared/search' %>


    <!-- Different navigation if login or not -->
    <% if account_signed_in? %>

      <%= link_to user_path(current_account.user) do %>
        <%= cl_image_tag current_account.user.photo, class: "avatar-large" %>
      <% end %>


      <%= link_to t(".sign_out", default: "LogOut"), destroy_account_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-button btn" %>

    <% else %>

    <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Login"), new_account_session_path, class: "navbar-wagon-item navbar-wagon-button btn" %>

    <% end %>

    <!-- Button (call-to-action) -->
  </div>
</div>
