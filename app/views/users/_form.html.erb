<%= simple_form_for @user do |f| %>
  <%= f.input :username %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 18 ,
              order: [:day, :month, :year]%>
  <%= f.input :bio, as: :text %>
  <%= f.input :phone_number %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.simple_fields_for :address do |ff| %>
    <%= ff.input :street_number %>
    <%= ff.input :street_name %>
    <%= ff.input :zip_code %>
    <%= ff.input :city %>
    <%= ff.country_select :country %>
  <% end %>
<%= f.submit %>
<% end %>