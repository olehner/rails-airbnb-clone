<%= simple_form_for @user do |f| %>
  <%= f.input :username %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :date_of_birth %>
  <%= f.input :bio, as: :text %>
  <%= f.input :phone_number %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
    <%= f.simple_fields_for :address do |ff| %>
      <%= ff.label "Street number" %>
      <%= ff.input_field :street_number %> <br>
      <%= ff.label "Street name" %>
      <%= ff.input_field :street_name %> <br>
      <%= ff.label "Zip code" %>
      <%= ff.input_field :zip_code %> <br>
      <%= ff.label "City" %>
      <%= ff.input_field :city %> <br>
      <%= ff.label "Country "  %>
      <%= ff.country_select :country %>
    <% end %>
  <%= f.submit %>
<% end %>
